generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ToDoItem {
  id        Int      @id @default(autoincrement()) // Auto-increment primary key
  title     String   // Title of the to-do item
  completed Boolean  @default(false) // Whether the item is completed
  createdAt DateTime @default(now()) // Timestamp of when the item was created
  updatedAt DateTime @updatedAt // Timestamp of when the item was last updated
}
